<div class="mt-4">
  <h3>Danh Sách Tài Khoản</h3>

  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tên đăng nhập</th>
        <th scope="col">Họ và Tên</th>
        <th scope="col">Trạng thái</th>
        <th scope="col" colspan="2">Ngày tạo</th>
      </tr>
    </thead>
    <tbody>
      {{#each taikhoan}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.TaiKhoan}}</td>
        <td>{{this.HoTen}}</td>
        <td>{{this.TrangThai}}</td>
        <td>{{this.NgayTao}}</td>
        <td>
          <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}"
            data-target="#on-off-trangthai">Ẩn/Hiện</a>
        </td>
      </tr>

      {{/each}}
    </tbody>
  </table>
</div>

{{! xac nhan thay ẩn hoặc hiện }}
<div id="on-off-trangthai" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Thay đổi trạng thái tài khoản</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn thay đổi trạng thái của tài khoản này ? </p>
      </div>
      <div class="modal-footer">
        <button type="button" id="btnXacNhan" class="btn btn-danger">Xác nhận</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>

<form name="on-off-trangthai-form" method="POST">

  <script>

    document.addEventListener('DOMContentLoaded', function () {
      var taikhoanID;
      var xacnhanForm = document.forms['on-off-trangthai-form'];
      var btnXanNhan =
        document.getElementById('btnXacNhan')
      $('#on-off-trangthai').on('show.bs.modal', function (event) {
        var button =
          $(event.relatedTarget); taikhoanID = button.data('id');
      });; btnXanNhan.onclick = function () {
        xacnhanForm.action = '/taikhoanAdmin/trangthai/' + taikhoanID + '?_method=PUT';
        xacnhanForm.submit()
      }
    });

  </script>